<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnightBlue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/txt_viewLL_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="end|bottom"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="monospace"
            android:gravity="end|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:filterTouchesWhenObscured="true"
        android:fitsSystemWindows="true"
        android:persistentDrawingCache="scrolling|animation"
        android:rowCount="5">

        <Button

            android:id="@+id/clearBtn"
            style="@style/BtnStdStyle"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="clearBtn"
            android:text="@string/c"
            android:textColor="@color/orange"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/bracersBtn"
            style="@style/BtnStdStyle"
            android:text="@string/bracers" />

        <Button
            android:id="@+id/parcentBtn"
            style="@style/BtnStdStyle"
            android:onClick="funcbtn"
            android:text="@string/parcent" />

        <Button
            android:id="@+id/divBtn"
            style="@style/BtnStdStyle"
            android:onClick="funcbtn"
            android:text="@string/div" />


        <Button
            android:id="@+id/btn7"
            style="@style/BtnStdStyle"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="click"
            android:text="@string/_7" />

        <Button
            android:id="@+id/btn8"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_8" />

        <Button
            android:id="@+id/btn9"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_9" />

        <Button
            android:id="@+id/mulBtn"
            style="@style/BtnStdStyle"
            android:onClick="funcbtn"
            android:text="@string/mul" />

        <Button
            android:id="@+id/btn4"
            style="@style/BtnStdStyle"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="click"
            android:text="@string/_4" />

        <Button
            android:id="@+id/btn5"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_5" />

        <Button
            android:id="@+id/btn6"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_6" />

        <Button
            android:id="@+id/subBtn"
            style="@style/BtnStdStyle"
            android:onClick="funcbtn"
            android:text="@string/sub"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btn1"
            style="@style/BtnStdStyle"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="click"
            android:text="@string/_1" />

        <Button
            android:id="@+id/btn2"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_2" />


        <Button
            android:id="@+id/btn3"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_3" />

        <Button
            android:id="@+id/addBtn"
            style="@style/BtnStdStyle"
            android:onClick="funcbtn"
            android:text="@string/add" />

        <Button
            android:id="@+id/negBtn"
            style="@style/BtnStdStyle"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/min_val_signs" />

        <Button
            android:id="@+id/zeroBtn"
            style="@style/BtnStdStyle"
            android:onClick="click"
            android:text="@string/_0" />

        <Button
            android:id="@+id/dotBtn"
            style="@style/BtnStdStyle"
            android:text="@string/dot" />

        <Button
            android:id="@+id/equalBtn"
            style="@style/BtnStdStyle"
            android:background="@drawable/eq_btn_bg"
            android:onClick="getRes"
            android:text="@string/eq"
            android:textSize="25sp"
            tools:ignore="TextContrastCheck" />
    </GridLayout>

</android.widget.LinearLayout>